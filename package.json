{
  "name": "nest-test",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker": "docker compose up",
    "docker:build": "docker compose up --build",
    "docker:migrate": "prisma migrate dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "nyc:test": "nyc jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "testing:database": "yarn db:restart && dotenv -e .env.test -- prisma migrate reset --force",
    "compose:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "compose:test": "docker compose -f docker-compose.yml -f docker-compose.test.yml",
    "db:restart": "docker compose -f docker-compose.yml -f docker-compose.test.yml rm postgres -fsv && docker compose -f docker-compose.yml -f docker-compose.test.yml up -d && sleep 1",
    "container:stop": "docker container stop $(docker ps -q)",
    "pretest:int": "yarn db:restart && dotenv -e .env.test -- prisma migrate reset --force",
    "test:int": "dotenv -e .env.test -- jest -i --no-cache --watch --config jest-int.json",
    "posttest:int": "yarn container:stop",
    "spec:cov": "yarn testing:database && dotenv -e .env.test -- jest -i --no-cache --coverage --config jest-cov.json",
    "test:end": "yarn testing:database && dotenv -e .env.test -- jest -i --no-cache --watch --config jest-e2e.json",
    "docker:dev": "yarn compose:dev && prisma migrate deploy && nest start --watch",
    "postdocker:dev": "yarn container:stop"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.4",
    "@prisma/client": "4.7.1",
    "@prisma/generator-helper": "^4.14.1",
    "@types/cache-manager": "^4.0.2",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-redis": "^6.1.3",
    "dot-object": "^2.1.4",
    "express-session": "^1.17.3",
    "ioredis": "^5.2.4",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.40",
    "nestjs-prisma": "^0.20.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@golevelup/ts-jest": "^0.3.4",
    "@mermaid-js/mermaid-cli": "^10.1.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/connect-redis": "^0.0.19",
    "@types/dot-object": "^2.1.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "28.1.8",
    "@types/moment": "^2.13.0",
    "@types/node": "^20.2.3",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "prisma": "^4.7.1",
    "prisma-erd-generator": "^1.7.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
